    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.equipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nro_de_orden)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_final)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.division)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observaciones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.borrado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.falla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.it1.cuenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.medida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usuario)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.equipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nro_de_orden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_final)
            </td>
