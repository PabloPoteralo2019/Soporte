                @Html.DisplayFor(modelItem => item.division)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.borrado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado1.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.falla1.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.it1.cuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medida1.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuario1.cuenta)
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.soporte_id }) |*@
                @Html.ActionLink("Orden", "Details", new { id = item.soporte_id })
            </td>
        </tr>
    }

</table>
