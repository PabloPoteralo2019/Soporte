@model IEnumerable<SOPORTE.Models.medida>

@{
    ViewBag.Title = "";
}

<h2>Medidas</h2>

<p>
    @Html.ActionLink("Alta", "Create", new { area = "" }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Volver", "UserDashBoard", "Home", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.medida_id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.medida_id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.medida_id })
            </td>
        </tr>
    }

   
    
</table>
